<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#03A9F4</item>
    <item name="android:colorPrimaryDark">#0288D1</item>
    <item name="colorAccent">#8BC34A</item>
    <item name="android:colorEdgeEffect">#000000</item>
  </style>
  
  <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:colorPrimary">#673AB7</item>
    <item name="android:colorPrimaryDark">#512DA8</item>
    <item name="android:colorAccent">#FF4081</item>
  </style>

  <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textSize">24sp</item>
    <item name="android:textColorPrimary">#fff</item>
  </style>

  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">#f5f5f5</item>
    <item name="spinBars">true</item>
  </style>
</resources>
