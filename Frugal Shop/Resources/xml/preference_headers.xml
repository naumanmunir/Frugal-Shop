<?xml version="1.0" encoding="utf-8" ?>
<preference-headers
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pref_headers">

  <header android:fragment="monodroid.apidemo.preferences.PreferenceWithHeaders_Prefs1Fragment"
          android:icon="@drawable/ic_notifications_24dp"
          android:title="Prefs1"
          android:summary="An example of some preferences." />

  <header android:fragment="monodroid.apidemo.preferences.PreferenceWithHeaders_Prefs2Fragment"
          android:icon="@drawable/ic_notifications_24dp"
          android:title="Prefs2"
          android:summary="Some other preferences you can see.">
    <!-- Arbitrary key/value pairs can be included with a header as
             arguments to its fragment. -->
    <extra android:name="someKey" android:value="someHeaderValue" />
  </header>

  <header android:icon="@drawable/ic_notifications_24dp"
          android:title="Intent"
          android:summary="Launches an Intent.">
    <intent android:action="android.intent.action.VIEW"
            android:data="http://www.android.com" />
  </header>

</preference-headers>
